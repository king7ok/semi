	}

	public ArrayList<MainPost> selectPost(Connection conn) {
		Statement stmt = null;
		ResultSet rset = null;
		String query = "select * from screen_banner";
		ArrayList<MainPost> list = null;
		try {
			stmt = conn.createStatement();
			rset = stmt.executeQuery(query);
			
		}catch(Exception e) {
			e.printStackTrace();
		}finally {
			close(rset);
			close(stmt);
		}
		return null;
	}

}
